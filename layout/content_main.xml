<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/butterfly" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@mipmap/circle"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="24dp">



            <ImageView
                android:id="@+id/jenifer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:tint="#ffffff"
                android:src="@mipmap/overflow" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Viral Android"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Android free tutorials and example"
                android:textColor="#fff"
                android:textSize="14sp" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+ Follow"
                android:textColor="#ffffff"
                android:background="@drawable/folow_button"
                android:layout_below="@+id/profile_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160dp"
                android:elevation="4dp"/>


        </RelativeLayout>


        <GridLayout
            android:id="@+id/linearbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:background="@color/colorAccent">

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:textSize="12dp"
                android:text="1234\nFollower"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:id="@+id/button2"
                android:layout_toRightOf="@+id/button1"
                android:textSize="12dp"
                android:background=""
                android:textColor="#ffffff"
                android:text="1234\nFolowing"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="fill_horizontal"
                android:layout_toRightOf="@id/button2"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:textSize="12dp"
                android:text="1234\nPost"
                android:background=""
                android:textColor="#ffffff"
                android:id="@+id/button3"
                android:layout_toRightOf="@+id/button2"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:id="@+id/button4"
                android:layout_toRightOf="@+id/button3"
                android:textSize="12dp"
                android:background=""
                android:textColor="#ffffff"
                android:text="1234\nPlace"/>

        </GridLayout>





    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@mipmap/butterfly"
            android:scaleType="centerCrop" />



        <ImageButton
            android:id="@+id/user_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/user_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@mipmap/circle"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"/>



        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_cover"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="10dp">



            <ImageView
                android:id="@+id/action_overflow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/overflow"
                android:tint="#ffffff" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="Viral Android"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Android free tutorials and example"
                android:textColor="#fff"
                android:textSize="10dp" />


            <Button
                android:id="@+id/follow"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:background="@drawable/folow_button"
                android:elevation="4dp"
                android:text="+ Follow"
                android:textColor="#ffffff" />


        </RelativeLayout>


        <GridLayout
            android:id="@+id/linearbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:background="@color/colorAccent"
            tools:targetApi="ice_cream_sandwich">

            <Button
                android:id="@+id/Follower_btn"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@color/colorAccent"
                android:text="1234\nFollower"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <Button
                android:id="@+id/Following_btn"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/follower_btn"
                android:background="@color/colorAccent"
                android:text="1234\nFollowing"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_toRightOf="@id/button2"
                android:text="" />

            <Button
                android:id="@+id/Post_btn"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/Following_btn"
                android:background="@color/colorAccent"
                android:text="1234\nPost"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <Button
                android:id="@+id/Destination_btn"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/Post_btn"
                android:background="@color/colorAccent"
                android:text="1234\nDestination_btn"
                android:textColor="#ffffff"
                android:textSize="10dp" />

        </GridLayout>


    </RelativeLayout>
</ScrollView>